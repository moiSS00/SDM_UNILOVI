        android:layout_width="343dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="10dp"
        android:hint="@string/emailEditHint"
        android:maxWidth="488dp"
        android:minWidth="88dp"
        app:errorEnabled="true"
