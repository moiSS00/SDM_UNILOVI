<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutUserSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingsActivity">


    <TextView
        android:id="@+id/txtFacultadCarreraUserSettings"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:text="Facultad y carrera:"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <Switch
        android:id="@+id/switchTemaUserSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar tema"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupGeneroUserSettings"
        app:layout_constraintVertical_bias="0.328" />

    <RadioGroup
        android:id="@+id/radioGroupGeneroUserSettings"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerUserSettingsCarreras"
        app:layout_constraintVertical_bias="0.227">

        <RadioButton
            android:id="@+id/radioMasculinoUserSettings"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/radioFemeninoUserSettings"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:text="Femenino" />

        <RadioButton
            android:id="@+id/radioOtroUserSettings"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="Otro" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spinnerUserSettingsFacultades"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFacultadCarreraUserSettings"
        app:layout_constraintVertical_bias="0.029" />

    <Spinner
        android:id="@+id/spinnerUserSettingsCarreras"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerUserSettingsFacultades"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/txtGeneroUserSettings"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:text="GÃ©nero:"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerUserSettingsCarreras"
        app:layout_constraintVertical_bias="0.106" />

    <include
        android:id="@+id/layoutLoad"
        layout="@layout/load_layout"
        android:background="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:visibility="visible"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="469dp" />


</androidx.constraintlayout.widget.ConstraintLayout>