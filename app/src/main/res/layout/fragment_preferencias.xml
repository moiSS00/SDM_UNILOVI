<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PreferenciasBusquedaFragment">

    <TextView
        android:id="@+id/carreraText"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:ems="@integer/titleSize"
        android:text="@string/menu_preferencias"
        android:textColor="#F72464"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <SeekBar
        android:id="@+id/pEdadMinimaSb"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:max="31"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sobreMiText"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/sobreMiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edadMinimaSelectText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.156" />

    <TextView
        android:id="@+id/edadMinima"
        android:layout_width="56dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toEndOf="@+id/pEdadMinimaSb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355" />

    <SeekBar
        android:id="@+id/psEdadMaximaSb"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:max="31"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/edadMaxima"
        android:layout_width="56dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toEndOf="@+id/psEdadMaximaSb"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edadMaximaSelectText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pEdadMinimaSb"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:text="@string/sexoSelectText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carreraText"
        app:layout_constraintVertical_bias="0.016" />

    <CheckBox
        android:id="@+id/pMujerCheck"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:text="@string/femeninoEditHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toEndOf="@+id/pHombreCheck"
        app:layout_constraintTop_toBottomOf="@+id/carreraText"
        app:layout_constraintVertical_bias="0.062" />

    <CheckBox
        android:id="@+id/pNoBinarioCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otroEditHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/pMujerCheck"
        app:layout_constraintTop_toBottomOf="@+id/carreraText"
        app:layout_constraintVertical_bias="0.062" />

    <CheckBox
        android:id="@+id/pHombreCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masculinoEditHint"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carreraText"
        app:layout_constraintVertical_bias="0.062" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filledTextFieldFacultadPreferencias"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:hint="@string/facultadOpcionalEditHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psEdadMaximaSb"
        app:layout_constraintVertical_bias="0.156">

        <AutoCompleteTextView
            android:id="@+id/pFacultadPreferenciasCbx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filledTextFieldCarreraPreferencias"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:hint="@string/carreraOpcionalEditHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filledTextFieldFacultadPreferencias"
        app:layout_constraintVertical_bias="0.176">

        <AutoCompleteTextView
            android:id="@+id/pCarreraPreferenciasCbx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>